# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase credentials
# Get your Firebase credentials from: https://console.firebase.google.com/
# Select your project > Project Settings > General > Your apps

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# SendGrid API Key (for email functionality)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid Sender Email (REQUIRED - must be verified in SendGrid)
# This email address must be verified as a Sender Identity in SendGrid
# For single sender verification: https://app.sendgrid.com/settings/sender_auth/senders/new
# For domain authentication: https://app.sendgrid.com/settings/sender_auth/domains/new
# Use your verified email address (e.g., noreply@yourdomain.com)
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SendGrid Sender Name (optional, defaults to "Scholarship Tracker")
SENDGRID_FROM_NAME=Scholarship Tracker

# App URL (for email links)
# Set this to your production URL when deploying
# For local development, this defaults to http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAI API Key (for chatbot functionality)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
